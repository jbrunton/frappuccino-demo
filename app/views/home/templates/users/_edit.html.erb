<form class="form-horizontal">
    <fieldset>
    
        <legend>Edit profile</legend>
        
        <div data-bind="formField: {
            field: 'screen_name',
            label: 'Screen name',
            textarea: true
        }" />
        
        <div data-bind="formField: {
            field: 'email',
            label: 'Email',
            textarea: true
        }" />
        
        <div data-bind="formField: {
            field: 'avatar_url',
            label: 'Avatar url',
            textarea: true
        }" />
        
        <div data-bind="formField: {
            field: 'bio',
            label: 'Bio',
            textarea: true
        }" />
        
        <div class="form-actions">
            <button class="btn btn-primary" data-bind="click: submit_action( $data )">Submit</button>
            <button class="btn nav-to" data-bind="attr: { href: url_for( $data ) }">Cancel</button>
        </div>
    </fieldset>
</form>
